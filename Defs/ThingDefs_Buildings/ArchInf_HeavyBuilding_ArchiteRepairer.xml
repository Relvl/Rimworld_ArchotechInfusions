<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <ThingDef ParentName="ArchInf_HeavyBuilding_Base">
        <defName>ArchInf_Building_ArchiteRepairer</defName>
        <label>archite repairing table</label>
        <description>Allows pawns to repair their equipment at the cost of an arcite.</description>
        <thingClass>ArchotechInfusions.building.ArchInf_Repairer_Building</thingClass>
        <costStuffCount>115</costStuffCount>
        <costList>
            <ComponentIndustrial>20</ComponentIndustrial>
            <Plasteel>50</Plasteel>
        </costList>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <WorkToBuild>1500</WorkToBuild>
            <Mass>1000</Mass>
        </statBases>

        <graphicData>
            <texPath>ArchotechInfusions/Things/Buildings/ArchInf_Printer</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(7,4)</drawSize>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <surfaceType>Item</surfaceType>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <fillPercent>1</fillPercent>
        <size>(5,2)</size>
        <castEdgeShadows>True</castEdgeShadows>
        <rotatable>true</rotatable>
        <building>
            <bed_humanlike>false</bed_humanlike>
            <bed_showSleeperBody>True</bed_showSleeperBody>
            <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
            <ai_chillDestination>false</ai_chillDestination>
        </building>

        <comps>
            <li Class="ArchotechInfusions.grid.GridMemberCompProps">
                <GridType>ArchInfGrid</GridType>
            </li>
            <li Class="CompProperties_Breakdownable" />
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <transmitsPower>true</transmitsPower>
                <basePowerConsumption>1500</basePowerConsumption>
                <idlePowerDraw>100</idlePowerDraw>
            </li>
            <li Class="ArchotechInfusions.comps.CompProps_ArchiteRepairer">
                <EnergyPerHp>5</EnergyPerHp>
                <ArchitePerHp>3</ArchitePerHp>
                <HpPerTick>0.05</HpPerTick>
            </li>
        </comps>
    </ThingDef>

</Defs>