<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ArchInf_Building_Base">
        <defName>ArchInf_Building_Loom</defName>
        <label>network loom</label>
        <description>Lom to loom</description>
        <thingClass>ArchotechInfusions.building.ArchInf_Loom_Building</thingClass>

        <graphicData>
            <texPath>ArchotechInfusions/Things/Buildings/ArchInf_Loom_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <linkType>Basic</linkType>
            <linkFlags>
                <li>Custom8</li>
            </linkFlags>
            <damageData>
                <rect>(0,0.35,1,0.3)</rect>
            </damageData>
        </graphicData>
        <uiIconPath>ArchotechInfusions/UI/Loom_Atlas</uiIconPath>

        <building>
            <isInert>true</isInert>
            <isEdifice>false</isEdifice>
            <blueprintGraphicData>
                <texPath>ArchotechInfusions/Things/Buildings/ArchInf_Loom_AtlasBP</texPath>
            </blueprintGraphicData>
        </building>

        <altitudeLayer>Conduits</altitudeLayer>
        <passability>Standable</passability>
        <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
        <clearBuildingArea>false</clearBuildingArea>

        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <WorkToBuild>175</WorkToBuild>
            <Beauty>-2</Beauty>
        </statBases>

        <placingDraggableDimensions>1</placingDraggableDimensions>

        <costStuffCount>10</costStuffCount>

        <rotatable>false</rotatable>
        <neverMultiSelect>true</neverMultiSelect>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <placeWorkers>
            <li>ArchotechInfusions.place_worker.PlaceWorkerLoom</li>
        </placeWorkers>
        <comps>
            <li Class="ArchotechInfusions.grid.GridMemberCompProps">
                <GridType>ArchInfGrid</GridType>
            </li>
        </comps>
    </ThingDef>
</Defs>